<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"
>

<div class="page-width">
  <div class="grid grid--2-col-desktop order-content">
    <div class="grid__item order-left-content">
      <h2>{{ section.settings.header }}</h2>
      {{ section.settings.content }}
    </div>
    <div class="grid__item order-right-content">
      <div class="owl-carousel owl-theme" id="order-carousel">
        {% for block in section.blocks %}
          <div class="item">
            <img src="{{ block.settings.image | img_url:"master" }}" class="carousel-img">
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
<div class="taggbox-container" style="width:100%;height:100%;overflow: auto;">
  <div class="taggbox-socialwall" data-wall-id="113314" view-url="https://app.taggshop.io/s/113314"></div>
  <script src="https://web.taggshop.io/embed.min.js" type="text/javascript"></script>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
  $('#order-carousel').owlCarousel({
      loop:true,
      margin:15,

      responsive:{
          0:{
              items:1
          },
          600:{
              items:1
          },
          1000:{
              items:4
          }
      }
  })
</script>
{% schema %}
{
  "name": "How to order section",
  "class":"how-to-order",
  "settings": [
    {
      "type": "text",
      "id": "header",
      "label": "Header"
    },
    {
      "type": "textarea",
      "id": "content",
      "label": "Content"
    }
  ],
  "blocks": [
   {
     "name": "Order Carousel",
     "type": "order-carousel",
     "settings": [
       {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
       }
     ]
   }
  ],
  "presets":[
    {
      "name":"How to order"
    }
  ]
}
{% endschema %}

